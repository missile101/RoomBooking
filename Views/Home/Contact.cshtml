@*declaring the data type of the model holds the message data*@
@model Violet_Roberston_RoomBooking.YM.Models.Message
@{
    ViewBag.Title = "Contact";
}

<!--Container (Contact Section)-->
<div id="contact" class="container-fluid bg-grey"
     <h2 class="text-center">CONTACT</h2>
  <div class="row">
      <div class="col-sm-5">
          <p>Contact us and we'll get back to you withing 24 hours</p>
          <p><span class="glyphicon glyphicon-map-marker"></span>Glasgow, Scotland</p>
          <p>><span class="glyphicon glyphicon-phone"></span>+44 15151515</p>
          <p>
              <span class="glyphicon glyphicon-envelope"></span>
              <a href="mailto:contactus@VoiletReoberton's.com">contactus@VoiletRoberston's.com</a>
          </p>


</div>  </div>

@using (Html.BeginForm())
 { 
  @Html.AntiForgeryToken()
    <div class="col-sm-7 slideanim">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-sm-6 form-group">

            @Html.TextBoxFor(model => model.FullName, new { @placeholder = "Name", @class = "form-control", @id = "name" })
            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" }) 
       </div>

          <div class="col-sm-6 form-group">
            @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email", @class = "form-control", @id = "email" })
            @Html.ValidationMessageFor(model => model.Email,"",new {@class="text-danger"})
            </div>
    </div>
        @Html.TextBoxFor(model =>model.Comment, new {@placeholder="Comment",@class="form-control",@id="comments", @rows=5})
        @Html.ValidationMessageFor(model => model.Comment, "", new {@class="text-danger"})
        <br>
        <div class="row">
         <div class="col-sm-12 form-group">

            <input type="submit" value="send" class="btn btn-default pull-right" />
             </div>
         </div>
     </div>
 }
 </div>
